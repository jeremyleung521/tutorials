@article{mostofian_statistical_2019,
	title = {Statistical {Uncertainty} {Analysis} for {Small}-{Sample}, {High} {Log}-{Variance} {Data}: {Cautions} for {Bootstrapping} and {Bayesian} {Bootstrapping}},
	volume = {15},
	issn = {1549-9618},
